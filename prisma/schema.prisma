// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  emal String @unique
  password String
  accounts Accounts[]
  category Categories[]

  @@map("user")
}

model Accounts {
  id Int @default(autoincrement()) @id
  title String
  bank_name String
  currency String
  balance Float
  userId User @relation(fields: [user_id], references: [id])
  user_id Int
  transaction Transaction?

  @@map("accounts")
}

model Categories {
  id Int @default(autoincrement()) @id
  name_category String
  description String
  userId User @relation(fields: [user_id], references: [id])
  user_id Int
  transaction Transaction?

  @@map("categories")
}

model Transaction {
  id Int @default(autoincrement()) @id
  type_transaction Transactions
  sum Float
  date DateTime @default(now())
  description String
  categories Categories @relation(fields: [category_id], references: [id])
  category_id Int @unique
  accountId Accounts @relation(fields: [account_id], references: [id])
  account_id Int @unique

  @@map("transaction")
}

enum Transactions {
  DEBIT
  CREDITING
}